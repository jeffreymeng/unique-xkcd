{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Unread XKCD",
  "short_name": "Unread XKCD",
  "version": "1.0",
  "description": "Adds a unique random button to the xkcd website that allows you to view a random comic that you've never seen before.",
  "manifest_version": 3,
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://xkcd.com/*", "https://www.xkcd.com/*"],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
