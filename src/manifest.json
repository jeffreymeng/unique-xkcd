{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Unread XKCD",
  "short_name": "Unread XKCD",
  "version": "1.0",
  "description": "Adds a unique random button to the xkcd website that allows you to view a random xkcd that you've never seen before.",
  "manifest_version": 3,
  "permissions": ["storage"],
  "optional_permissions": ["history"],
  "content_scripts": [
    {
      "matches": ["https://xkcd.com/*", "https://www.xkcd.com/*"],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_title": "Unread XKCD",
    "default_popup": "popup/index.html"
  },
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "96": "icons/icon-96x96.png",
    "128": "icons/icon-128x128.png"
  }
}
